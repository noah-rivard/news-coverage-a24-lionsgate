{
  "manifest_version": 3,
  "name": "News Coverage Intake",
  "version": "1.0.0",
  "description": "Capture entertainment news articles and send to the ingest API.",
  "permissions": ["storage", "activeTab", "tabs", "scripting", "contextMenus"],
  "host_permissions": ["https://feedly.com/*", "https://*.feedly.com/*"],
  "optional_host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "News Coverage Intake"
  },
  "options_page": "options.html"
}
